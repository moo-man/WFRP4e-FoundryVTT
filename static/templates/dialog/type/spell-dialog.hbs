<div>
  <div class="form-group" {{#if tooltips.difficulty}}data-tooltip="{{tooltips.difficulty}}" data-tooltip-direction="LEFT" {{/if}}>
    <label>{{localize "Difficulty"}}</label>
    <div class="form-fields">
      <select name="difficulty">
        {{selectOptions (config "difficultyLabels") selected=fields.difficulty}}
      </select>
    </div>
  </div>

<div class="form-group">
  <label data-tooltip="DIALOG.MalignantInfTT">{{localize "DIALOG.MalignantInf"}}</label>
  <div class="form-fields">
    <input type="checkbox" name="malignantInfluence" {{checked fields.malignantInfluence}} />
  </div>
</div>

{{#if (settings "homebrew.unofficialgrimoire")}}
  <div class="form-group">
    <label data-tooltip="DIALOG.UseIngredientTooltip">{{localize "DIALOG.UseIngredient"}}</label>
    <div class="form-fields">
      <select name="ingredientMode">
        {{#select fields.ingredientMode}}
          <option value="none">{{localize "IngredientNone"}}</option>
          <option value="power">{{localize "IngredientPower"}}</option>
          <option value="control">{{localize "IngredientControl"}}</option>
        {{/select}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "Overchannelling"}}</label>
    <div class="form-fields">
      <input type="text" name="overchannelling" value="{{fields.overchannelling}}" data-tooltip="DIALOG.OverchannellingTooltip" />
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DIALOG.Quickcasting"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="quickcasting" value="{{fields.quickcasting}}" data-tooltip="DIALOG.QuickcastingTooltip" />
    </div>
  </div>
{{/if}}

  <div class="form-group">
    <label>{{localize "DIALOG.RollMode"}}</label>
    <div class="form-fields">
      <select name="rollMode">
        {{selectOptions (config "rollModes") labelAttr="label" localize=true selected=fields.rollMode}}
      </select>
    </div>
  </div>
</div>