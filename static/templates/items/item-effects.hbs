<div class="tab" data-tab="effects">
  <div class="condition-list">
    {{#each conditions as |condition c|}}
    <div class="sheet-condition" data-cond-id={{condition.id}}>
      <a>
        {{#if condition.existing}}
        <img class="condition-click" style="border:none" width="50" height="50" src={{condition.icon}} />
        {{else}}
        <img class="condition-click" style="border:none; opacity: 0.5" width="50" height="50" src={{condition.icon}} />
        {{/if}}
      </a>
      <div class="condition-controls">
        {{#if condition.boolean}}
        {{#if condition.existing}}
        <a class="condition-toggle"><i class="far fa-check-circle"></i></a>
        {{else}}
        <a class="condition-toggle"><i class="far fa-circle"></i></a>
        {{/if}}
        {{else}}
        <a class="condition-value">{{condition.value}}</a>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>

  <div class="item list-header">
    <a class="name">{{localize "Effects"}}</a>
    {{#if document.isOwner}}
    <div class="list-controls">
      {{else}}
      <div class="list-controls" style="visibility : hidden;">
        {{/if}}
        <a class="item-control effect-create" title="{{localize 'SHEET.CreateItem'}}"><i class="fas fa-plus"></i></a>
      </div>
    </div>
    <ol class="sheet-list effect-list save-scroll">
      {{#each item.effects as |effect e|}}
      <li class="item effect" data-item-id="{{effect.id}}" data-effect-id="{{effect.id}}">
        <div class="content">
          <div class="item-name effect-name item-dropdown">
            <div class="image" style="background-image: url({{effect.icon}})"></div>
            <a class="name effect-title">{{effect.label}}</a>
          </div>

          {{#if ../document.isOwner}}
          <div class="list-controls effect-controls">
            {{else}}
            <div class="list-controls" style="visibility : hidden;">
              {{/if}}
              <a class="effect-control effect-delete" title="{{localize 'SHEET.DeleteItem'}}"><i
                  class="fas fa-trash"></i></a>
            </div>
      </li>
      {{/each}}
    </ol>

  </div>