<form class="wfrp4e item-sheet {{cssClass}}" autocomplete="off">
  {{> systems/wfrp4e/templates/items/item-header.hbs category="Cargo" physical=true hideQuantity=true}}

  <nav class="sheet-tabs tabs" data-tab-container="primary">
    <a class="item active" data-tab="description">{{localize "Description"}}</a>
    <a class="item" data-tab="details">{{localize "Details"}}</a>
  </nav>
  <div class="sheet-tabs edges left"></div>
  <div class="sheet-tabs edges right"></div>

  <section class="content">

    {{> systems/wfrp4e/templates/items/item-description.hbs}}

    <div class="tab details" data-tab="details">
      <div class="form-group">
        <label style="flex-grow: 2;" class="label-text">{{localize "Availability"}}</label>
        <select style="flex-grow: 4;" name="system.availability.value" data-dtype={{system.availability.type}}>
          {{#select system.availability.value}}
          {{#each (config "availability") as |avail a|}}
          <option value="{{a}}">{{avail}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>
      <div class="form-group">
        <label style="flex-grow: 2;" class="label-text">{{localize "ITEM.CargoType"}}</label>
        <select style="flex-grow: 4;" name="system.cargoType.value" data-dtype="String">
          {{#select system.cargoType.value}}
          <option value=""></option>
          {{#each cargoTypes as |name type|}}
          <option value="{{type}}">{{name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "ITEM.UnitPrice"}}</label>
        <div class="input-box">
          <input class="input-text" type="text" name="system.unitPrice.value" value="{{system.unitPrice.value}}"
            data-dtype="Number" />
        </div>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "ITEM.Origin"}}</label>
        <div class="input-box">
          <input class="input-text" type="text" name="system.origin.value" value="{{system.origin.value}}"
            data-dtype="String" />
        </div>
      </div>

      <div class="form-group">
        <label style="flex-grow: 2;" class="label-text">{{localize "ITEM.CargoQuality"}}</label>
        <select style="flex-grow: 4;" name="system.quality.value" data-dtype="{{system.quality.type}}">
          {{#select item.quality.value}}
          {{#each qualities as |name type|}}
          <option value="{{type}}">{{name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>
      {{#if dotrActive}}
      <button class="cargo-sell"><i class="fas fa-coins"></i> {{localize "ITEM.Sell"}}</button>
      {{/if}}
    </div>

  </section>
</form>
