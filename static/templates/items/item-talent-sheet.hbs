<form class="wfrp4e item-sheet {{cssClass}}" autocomplete="off">
  {{> systems/wfrp4e/templates/items/item-header.hbs category="Talent" physical=false}}

  <nav class="sheet-tabs tabs" data-tab-container="primary">
    <a class="item active" data-tab="description">{{localize "Description"}}</a>
    <a class="item" data-tab="details">{{localize "Details"}}</a>
    <a class="item" data-tab="effects">{{localize "Effects"}}</a>
  </nav>
  <div class="sheet-tabs edges left"></div>
  <div class="sheet-tabs edges right"></div>

  <section class="content">

    {{> systems/wfrp4e/templates/items/item-description.hbs}}

    <!-- Ability Details -->
    <div class="tab details" data-tab="details">

      <div class="form-group">
        <label class="label-text">{{localize "Max"}}</label>
        <select name="system.max.value" data-dtype="{{system.max.type}}">
          {{#select system.max.value}}
          {{#each (config "talentMax") as |Max max|}}
          <option value="{{max}}">{{Max}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "Skill Type"}}</label>
        <div class="input-box">
          <input class="input-text" name="system.tests.value" data-dtype="{{system.tests.type}}"
            value="{{system.tests.value}}" />
        </div>
      </div>
      {{#if isOwned}}
      <div class="form-group" title='{{localize "TooltipAllowXPSpending"}}'>
        <label class="label-text">{{localize "AllowXPSpending"}}</label>
        {{#if item.advances.force}}
        <a class="item-checkbox" data-target="system.advances.force"><i class="far fa-check-circle"></i></a>
        {{else}}
        <a class="item-checkbox" data-target="system.advances.force"><i class="far fa-circle"></i></a>
        {{/if}}
      </div>
      {{/if}}
    </div>

    {{> systems/wfrp4e/templates/items/item-effects.hbs}}

  </section>
</form>
