<form class="wfrp4e item-sheet {{cssClass}}" autocomplete="off">
  {{> systems/wfrp4e/templates/items/item-header.hbs category="Skill" physical=false}}

  <nav class="sheet-tabs tabs" data-tab-container="primary">
    <a class="item active" data-tab="description">{{localize "Description"}}</a>
    <a class="item" data-tab="details">{{localize "Details"}}</a>
    <a class="item" data-tab="effects">{{localize "Effects"}}</a>
  </nav>
  <div class="sheet-tabs edges left"></div>
  <div class="sheet-tabs edges right"></div>

  <section class="content">

    {{> systems/wfrp4e/templates/items/item-description.hbs}}

    <!-- Ability Details -->
    <div class="tab details" data-tab="details">

      <div class="form-group">
        <label class="label-text">{{localize "Characteristic"}}</label>
        <select name="system.characteristic.value" data-dtype="{{system.characteristic.type}}">
          {{#select system.characteristic.value}}
          {{#each (config "characteristics") as |ch char|}}
          <option value="{{char}}">{{ch}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "Skill Type"}}</label>
        <select name="system.advanced.value" data-dtype="{{system.advanced.type}}">
          {{#select system.advanced.value}}
          <option value=""></option>
          {{#each (config "skillTypes") as |type sktype|}}
          <option value="{{sktype}}">{{type}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "Specialization"}}</label>
        <select name="system.grouped.value" data-dtype="{{system.grouped.type}}">
          {{#select system.grouped.value}}
          <option value=""></option>
          {{#each (config "skillGroup") as |grouped skgroup|}}
          <option value="{{skgroup}}">{{grouped}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      {{#if isOwned}}

      <div class="form-group" title='{{localize "TooltipSkillModifier"}}'>
        <label class="label-text">{{localize "Modifier"}}</label>
        <div class="input-box">
          <input class="input-text" type="text" name="system.modifier.value" value="{{system.modifier.value}}"
            data-dtype="Number">
        </div>
      </div>

      <div class="form-group" title='{{localize "TooltipAllowXPSpending"}}'>
        <label class="label-text">{{localize "AllowXPSpending"}}</label>
        {{#if item.advances.force}}
        <a class="item-checkbox" data-target="system.advances.force"><i class="far fa-check-circle"></i></a>
        {{else}}
        <a class="item-checkbox" data-target="system.advances.force"><i class="far fa-circle"></i></a>
        {{/if}}
      </div>
      {{/if}}

      <div class="form-group" title='{{localize "ITEM.CostModifierTT"}}'>
        <label class="label-text">{{localize "ITEM.CostModifier"}}</label>
        <div class="input-box">
          <input class="input-text" type="text" name="system.advances.costModifier" value="{{system.advances.costModifier}}"
            data-dtype="Number">
        </div>
      </div>

    </div>
    {{> systems/wfrp4e/templates/items/item-effects.hbs}}
  </section>
</form>
