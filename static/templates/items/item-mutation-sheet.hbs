<form class="wfrp4e item-sheet {{cssClass}}" autocomplete="off">
  {{> systems/wfrp4e/templates/items/item-header.hbs category="Mutation" physical=false}}

  <nav class="sheet-tabs tabs" data-tab-container="primary">
    <a class="item active" data-tab="description">{{localize "Description"}}</a>
    <a class="item" data-tab="details">{{localize "Details"}}</a>
    <a class="item" data-tab="effects">{{localize "Effects"}}</a>
  </nav>
  <div class="sheet-tabs edges left"></div>
  <div class="sheet-tabs edges right"></div>

  <section class="content">

    {{> systems/wfrp4e/templates/items/item-description.hbs}}

    <div class="tab details" data-tab="details">
      <div class="form-group">
        <label class="label-text">{{localize "ITEM.MutationType"}}</label>
        <select name="system.mutationType.value" data-dtype="{{system.mutationType.type}}">
          {{#select system.mutationType.value}}
          {{#each (config "mutationTypes") as |type t|}}
          <option value="{{t}}">{{type}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group">
        <label class="label-text">{{localize "Modifier"}}</label>
        <div class="input-box">
          <input class="input-text" type="text" name="system.modifier.value" value="{{system.modifier.value}}"
            data-dtype="{{system.modifier.type}}" />
        </div>
      </div>

      <div title="{{localize 'ITEM.SkillModifierTT'}}" class="form-group">
        <label class="label-text">{{localize "ITEM.SkillModifier"}}</label>

        {{#if system.modifiesSkills.value}}
        <a class="item-checkbox" data-target="system.modifiesSkills.value"><i class="far fa-check-circle"></i></a>
        {{else}}
        <a class="item-checkbox" data-target="system.modifiesSkills.value"><i class="far fa-circle"></i></a>
        {{/if}}
      </div>
    </div>
    {{> systems/wfrp4e/templates/items/item-effects.hbs}}
  </section>
</form>
